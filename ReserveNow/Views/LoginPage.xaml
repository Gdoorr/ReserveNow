<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ReserveNow.ViewModels"
             x:Class="ReserveNow.LoginPage">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Логин" Text="{Binding Username}" />
        <Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Войти" Command="{Binding LoginCommand}" IsEnabled="{Binding IsNotBusy}" />
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
    </VerticalStackLayout>
</ContentPage>