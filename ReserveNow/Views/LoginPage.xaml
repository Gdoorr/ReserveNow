<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ReserveNow.ViewModels"
             x:Class="ReserveNow.LoginPage">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="UsernameEntry" Placeholder="Логин" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Войти" Clicked="OnLoginButtonClicked" />
        <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False" IsRunning="False" />
    </VerticalStackLayout>
</ContentPage>