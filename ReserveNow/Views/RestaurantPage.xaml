<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReserveNow.Views.RestaurantPage"
             Title="RestaurantPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="{Binding Name}" FontSize="Large" />
            <Label Text="{Binding Address}" FontSize="Medium" />
            <DatePicker x:Name="DatePicker" />
            <TimePicker x:Name="TimePicker" />
            <Button Text="Check Available Tables" Clicked="OnCheckTablesClicked" />
            <CollectionView x:Name="TablesList" IsVisible="False">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Capacity, StringFormat='Capacity: {0}'}" />
                            <Label Text="{Binding IsAvailable, StringFormat='Available: {0}'}" />
                            <Button Text="Book Table" Clicked="OnBookTableClicked" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>