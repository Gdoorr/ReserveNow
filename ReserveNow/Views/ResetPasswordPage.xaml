<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReserveNow.Views.ResetPasswordPage"
             Title="Сброс пароля">
    <StackLayout Padding="20">
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Button Text="Send Code" Clicked="OnSendCodeClicked" />
        <Entry Placeholder="Code" x:Name="CodeEntry" />
        <Entry Placeholder="New Password" IsPassword="True" x:Name="NewPasswordEntry" />
        <Button Text="Reset Password" Clicked="OnResetPasswordClicked" />
    </StackLayout>
</ContentPage>