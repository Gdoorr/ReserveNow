<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReserveNow.Views.RegisterPage"
             Title="RegisterPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Entry Placeholder="Name" x:Name="NameEntry" />
            <Entry Placeholder="Email" x:Name="EmailEntry" Keyboard="Email" />
            <Entry Placeholder="Phone" x:Name="PhoneEntry" Keyboard="Telephone" />
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />
            <Picker Title="Select City" x:Name="CityPicker" />

            <Button Text="Register" Clicked="OnRegisterClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>